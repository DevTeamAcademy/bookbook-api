<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    
    <changeSet id="create_book_user" author="aploskiy">
        <createTable tableName="book_user">
            <column name="guid" type="nvarchar(40)">
                <constraints nullable="false" primaryKeyName="book_user_pk" primaryKey="true"/>
            </column>
            <column name="login" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(128)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            
            <!--audit field-->
            <column name="version" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(250)"/>
            <column name="created_date" type="timestamp(3) with time zone">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="timestamp(3) with time zone"/>
        </createTable>
    </changeSet>
    
    <changeSet id="add_unique_constrains" author="aploskiy">
        <addUniqueConstraint tableName="book_user" columnNames="login, email" constraintName="user_unique_log_crn"/>
    </changeSet>
    
    <changeSet id="add_indexes" author="aploskiy">
        <createIndex tableName="book_user" indexName="book_user_login_idx">
            <column name="login"/>
        </createIndex>
        <createIndex tableName="book_user" indexName="book_user_email_idx">
            <column name="email"/>
        </createIndex>
    </changeSet>
    
